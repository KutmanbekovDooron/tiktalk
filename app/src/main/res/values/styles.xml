    <style name="MsgErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorAppRed</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="MsgErrorTextWithMargin" parent="MsgErrorText">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingBottom">-15dp</item>

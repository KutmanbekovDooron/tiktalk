<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.payments.PaymentSettingsPlusActivity">

    <include layout="@layout/app_toolbar_title_gradient" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="27dp"
            android:text="@string/payment_settings_get_tik_talk_plus"
            android:textSize="22sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="?attr/colorTextGreyDarkOrWhite"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_round_payment"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="?attr/navigation_bar_height">
            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal|top"
                            android:background="@drawable/bg_round_white"
                            android:layout_marginTop="37dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:text="@string/payment_settings_turn_off_adds"
                            android:textSize="18sp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/colorGreyDark"/>
                    <com.rd.PageIndicatorView
                            android:id="@+id/pageIndicatorView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center_horizontal"
                            app:piv_animationType="fill"
                            app:piv_dynamicCount="true"
                            app:piv_count="6"
                            app:piv_interactiveAnimation="true"
                            app:piv_selectedColor="@color/colorGreyIndicator"
                            app:piv_unselectedColor="@color/colorWhite"
                            app:piv_viewPager="@id/viewPager"
                            android:padding="12dp"
                            app:piv_radius="4dp"
                            android:layout_marginBottom="2dp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="185dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="46dp">
                        <FrameLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_round_white_20">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:text="1 day"
                                    android:textSize="17sp"
                                    android:textColor="@color/colorGreyDark"
                                    android:fontFamily="@font/roboto_regular"
                                    android:layout_gravity="center_horizontal"/>
                        </FrameLayout>
                        <View
                                android:layout_width="2dp"
                                android:layout_height="wrap_content"/>
                        <FrameLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_round_white_20">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:text="1 month"
                                    android:textSize="17sp"
                                    android:textColor="@color/colorGreyDark"
                                    android:fontFamily="@font/roboto_regular"
                                    android:layout_gravity="center_horizontal"/>
                        </FrameLayout>
                        <View
                                android:layout_width="2dp"
                                android:layout_height="wrap_content"/>
                        <FrameLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_round_white_20">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:text="3 months"
                                    android:textSize="17sp"
                                    android:textColor="@color/colorGreyDark"
                                    android:fontFamily="@font/roboto_regular"
                                    android:layout_gravity="center_horizontal"/>
                        </FrameLayout>
                    </LinearLayout>

                    <Button
                            android:id="@+id/btnGetTikTalkPlus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:enabled="true"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:fontFamily="@font/avenir_next_regular"
                            android:layout_marginTop="40dp"
                            android:layout_marginStart="34dp"
                            android:layout_marginEnd="34dp"
                            android:textAllCaps="true"
                            android:background="@drawable/selector_btn_red"
                            android:text="@string/payment_settings_get_tik_talk_plus"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="26dp"
                            android:layout_marginStart="34dp"
                            android:layout_marginEnd="34dp"
                            android:text="Terms Text"
                            android:textSize="17sp"
                            android:textColor="@color/colorGreyDark"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_gravity="start"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="34dp"
                            android:layout_marginEnd="34dp"
                            android:layout_marginBottom="20dp"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras feugiat varius vestibulum. Integer vulputate condimentum metus. Nullam pretium auctor suscipit. Donec mollis bibendum quam, nec luctus mauris feugiat sit amet. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae; Vivamus aliquet, ante sit amet malesuada luctus, augue ligula tristique sem, sed vulputate mi ex et ante. Etiam sit amet euismod libero, id fringilla est."
                            android:textSize="10sp"
                            android:textColor="@color/colorGreyDark"
                            android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
            </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
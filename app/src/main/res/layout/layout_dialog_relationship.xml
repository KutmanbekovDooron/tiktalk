<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="@string/edit_profile_relationship"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="21dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@id/btnClose"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:background="@color/colorBlack10"/>

        <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

            <RadioButton
                    android:id="@+id/radioNoAnswer"
                    android:buttonTint="@color/colorVioletLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/relationship_no_answer"
                    android:textSize="16sp"
                    android:checked="false"
                    android:layoutDirection="rtl"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack90"
                    android:paddingStart="24dp" tools:ignore="RtlSymmetry"/>

            <RadioButton
                    android:id="@+id/radioSingle"
                    android:buttonTint="@color/colorVioletLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/relationship_single"
                    android:textSize="16sp"
                    android:layoutDirection="rtl"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack90"
                    android:layout_marginTop="18dp"
                    android:paddingStart="24dp" tools:ignore="RtlSymmetry"/>
            <RadioButton
                    android:id="@+id/radioTaken"
                    android:buttonTint="@color/colorVioletLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/relationship_taken"
                    android:textSize="16sp"
                    android:layoutDirection="rtl"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack90"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="20dp"
                    android:paddingStart="24dp" tools:ignore="RtlSymmetry"/>
        </RadioGroup>
    </LinearLayout>

</LinearLayout>
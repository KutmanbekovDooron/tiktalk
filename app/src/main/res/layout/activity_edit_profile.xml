<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.editProfile.EditProfileActivity">

    <include layout="@layout/app_toolbar_edit_profile"
             android:id="@+id/toolbarMainMessages"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/navigation_bar_height"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="0dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gridview"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:scrollbars="none"
                    tools:listitem="@android:layout/simple_list_item_checked"/>

            <FrameLayout
                    android:id="@+id/btnBasicInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="16dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile_basic_info"
                        android:textSize="17sp"
                        android:layout_gravity="start"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <TextView
                        android:id="@+id/tvBasicInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Marko, 20, Male"
                        android:textSize="17sp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="32dp"
                        android:textColor="?attr/colorBlack50OrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/arrowLeft"
                        android:rotation="180"
                        android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="?attr/colorEditProfileLine"/>


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile_work"
                        android:textSize="17sp"
                        android:layout_gravity="start"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <TextView
                        android:id="@+id/tvWork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Advertising Specialist"
                        android:lines="1"
                        android:layout_marginStart="60dp"
                        android:textSize="17sp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="16dp"
                        android:textColor="?attr/colorBlack50OrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <EditText
                        android:id="@+id/etWork"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="22dp"
                        android:paddingBottom="22dp"
                        android:hint="@string/edit_profile_work"
                        android:imeOptions="actionDone"
                        android:inputType="textShortMessage"
                        android:layout_marginEnd="16dp"
                        android:textSize="17sp"
                        android:layout_gravity="start"
                        android:background="@color/colorTransparent"
                        android:textColor="?attr/colorBlack50OrWhite"
                        android:textColorHint="?attr/colorBlack50OrWhite"
                        android:fontFamily="@font/roboto_regular"/>
            </FrameLayout>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="?attr/colorEditProfileLine"/>


            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="true"
                    android:layout_marginTop="16dp"
                    app:errorTextAppearance="@style/MsgErrorText"
                    app:errorEnabled="false">
                <EditText
                        android:id="@+id/etEducation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textShortMessage"
                        android:hint="@string/edit_profile_education"
                        android:textColorHint="?attr/colorTextGreyDarkOrWhite"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:imeOptions="actionDone"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"/>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/edit_profile_about_you"
                    android:textSize="27sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="?attr/colorTextGreyDarkOrWhite"/>


            <EditText
                    android:id="@+id/etAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/edit_profile_write_about_you"
                    android:imeOptions="actionDone"
                    android:inputType="textShortMessage"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="16dp"
                    android:textSize="17sp"
                    android:layout_gravity="start"
                    android:background="@color/colorTransparent"
                    android:textColor="?attr/colorBlack50OrWhite"
                    android:textColorHint="?attr/colorBlack50OrWhite"
                    android:fontFamily="@font/roboto_regular"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="?attr/colorEditProfileLine"/>



            <FrameLayout
                    android:id="@+id/btnRelationship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="16dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_relationship_heart"
                        android:tint="?attr/colorTextGreyDarkOrWhite"
                        android:layout_gravity="start|center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="@string/edit_profile_relationship"
                        android:textSize="17sp"
                        android:layout_gravity="start"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <TextView
                        android:id="@+id/tvRelationship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="No answer"
                        android:textSize="17sp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="32dp"
                        android:textColor="?attr/colorBlack50OrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/arrowLeft"
                        android:rotation="180"
                        android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="?attr/colorEditProfileLine"/>


            <FrameLayout
                    android:id="@+id/btnSexuality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="16dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_sexuality"
                        android:tint="?attr/colorTextGreyDarkOrWhite"
                        android:layout_gravity="start|center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="@string/edit_profile_sexuality"
                        android:textSize="17sp"
                        android:layout_gravity="start"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <TextView
                        android:id="@+id/tvSexuality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="No answer"
                        android:textSize="17sp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="32dp"
                        android:textColor="?attr/colorBlack50OrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/arrowLeft"
                        android:rotation="180"
                        android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="?attr/colorEditProfileLine"/>


            <FrameLayout
                    android:id="@+id/btnHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="16dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profile_ruler"
                        android:tint="?attr/colorTextGreyDarkOrWhite"
                        android:layout_gravity="start|center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="@string/edit_profile_height"
                        android:textSize="17sp"
                        android:layout_gravity="start"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <TextView
                        android:id="@+id/tvHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="178 cm"
                        android:textSize="17sp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="32dp"
                        android:textColor="?attr/colorBlack50OrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/arrowLeft"
                        android:rotation="180"
                        android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="?attr/colorEditProfileLine"/>


            <FrameLayout
                    android:id="@+id/btnLiving"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="16dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_home"
                        android:tint="?attr/colorTextGreyDarkOrWhite"
                        android:layout_gravity="start|center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="@string/edit_profile_living"
                        android:textSize="17sp"
                        android:layout_gravity="start"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <TextView
                        android:id="@+id/tvLiving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="No answer"
                        android:textSize="17sp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="32dp"
                        android:textColor="?attr/colorBlack50OrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/arrowLeft"
                        android:rotation="180"
                        android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="?attr/colorEditProfileLine"/>


            <FrameLayout
                    android:id="@+id/btnChildren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="16dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_children"
                        android:tint="?attr/colorTextGreyDarkOrWhite"
                        android:layout_gravity="start|center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="@string/edit_profile_children"
                        android:textSize="17sp"
                        android:layout_gravity="start"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <TextView
                        android:id="@+id/tvChildren"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Someday"
                        android:layout_marginEnd="32dp"
                        android:textSize="17sp"
                        android:layout_gravity="end"
                        android:textColor="?attr/colorBlack50OrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/arrowLeft"
                        android:rotation="180"
                        android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="?attr/colorEditProfileLine"/>


            <FrameLayout
                    android:id="@+id/btnSmoking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="16dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cigarrete"
                        android:tint="?attr/colorTextGreyDarkOrWhite"
                        android:layout_gravity="start|center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="@string/edit_profile_smoking"
                        android:textSize="17sp"
                        android:layout_gravity="start"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <TextView
                        android:id="@+id/tvSmoking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Never"
                        android:layout_marginEnd="32dp"
                        android:textSize="17sp"
                        android:layout_gravity="end"
                        android:textColor="?attr/colorBlack50OrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/arrowLeft"
                        android:rotation="180"
                        android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="?attr/colorEditProfileLine"/>


            <FrameLayout
                    android:id="@+id/btnDrinking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="16dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_drinking"
                        android:tint="?attr/colorTextGreyDarkOrWhite"
                        android:layout_gravity="start|center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="@string/edit_profile_drinking"
                        android:textSize="17sp"
                        android:layout_gravity="start"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <TextView
                        android:id="@+id/tvDrinking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Socially"
                        android:layout_marginEnd="32dp"
                        android:textSize="17sp"
                        android:layout_gravity="end"
                        android:textColor="?attr/colorBlack50OrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/arrowLeft"
                        android:rotation="180"
                        android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="?attr/colorEditProfileLine"/>


            <FrameLayout
                    android:id="@+id/btnZodiac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="16dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_zodiac"
                        android:tint="?attr/colorTextGreyDarkOrWhite"
                        android:layout_gravity="start|center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="@string/zodiac_title"
                        android:textSize="17sp"
                        android:layout_gravity="start"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <TextView
                        android:id="@+id/tvZodiac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Leo"
                        android:layout_marginEnd="32dp"
                        android:textSize="17sp"
                        android:layout_gravity="end"
                        android:textColor="?attr/colorBlack50OrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/arrowLeft"
                        android:rotation="180"
                        android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="?attr/colorEditProfileLine"/>


            <FrameLayout
                    android:id="@+id/btnISpeak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp"
                    android:layout_marginEnd="16dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_translation"
                        android:tint="?attr/colorTextGreyDarkOrWhite"
                        android:layout_gravity="start|center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="@string/edit_profile_i_speak"
                        android:textSize="17sp"
                        android:layout_gravity="start"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <TextView
                        android:id="@+id/tvISpeak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="English, Russian"
                        android:layout_marginEnd="32dp"
                        android:textSize="17sp"
                        android:layout_gravity="end"
                        android:textColor="?attr/colorBlack50OrWhite"
                        android:fontFamily="@font/roboto_regular"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/arrowLeft"
                        android:rotation="180"
                        android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="?attr/colorEditProfileLine"/>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/edit_profile_instagram"
                    android:textSize="22sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="?attr/colorTextGreyDarkOrWhite"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/edit_profile_instagram_subtitle"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="?attr/colorTextGreyDarkOrWhite"/>

            <TextView
                    android:id="@+id/btnConnectInstagram"
                    android:enabled="true"
                    android:textColor="@color/colorBtnViolet"
                    android:textStyle="bold"
                    android:fontFamily="@font/avenir_next_regular"
                    android:layout_width="match_parent"
                    android:drawableStart="@drawable/ic_instagram"
                    android:drawablePadding="0dp"
                    android:gravity="center"
                    android:paddingStart="45dp"
                    android:paddingEnd="55dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginEnd="34dp"
                    android:layout_marginBottom="40dp"
                    android:text="@string/edit_profile_instagram_connect"
                    android:background="@drawable/bg_round_logout"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
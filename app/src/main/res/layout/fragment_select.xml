<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.chatSingle.selectContacts.SelectFragment">

    <include layout="@layout/app_toolbar_select"
             android:id="@+id/toolbarSelectMessages"/>

    <include layout="@layout/app_toolbar_select_search_simple"
             android:id="@+id/toolbarSelectMessagesSearch"
             android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>

</LinearLayout>
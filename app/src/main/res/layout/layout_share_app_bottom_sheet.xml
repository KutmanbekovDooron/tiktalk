<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:id="@+id/bottom_sheet"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"

              android:layout_gravity="bottom"

              app:behavior_hideable="true"
              app:behavior_peekHeight="0dp"
              app:layout_behavior="@string/bottom_sheet_behavior">


    <LinearLayout android:id="@+id/bottom_shee222t"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"

                  android:background="?attr/attachFilesBg"
                  android:layout_gravity="bottom"
                  android:paddingStart="32dp"
                  android:paddingEnd="32dp"
                  android:layout_marginBottom="?attr/navigation_bar_height"
                  tools:ignore="UselessParent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/share_app"
                android:textSize="27sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="?attr/colorTextGreyDarkOrWhite"
        />

        <LinearLayout
                android:id="@+id/ggggg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/attachFilesBg"
                android:layout_marginTop="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" tools:ignore="UseCompoundDrawables">
                <ImageView
                        android:id="@+id/btnShareWhatsApp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ic_whatsapp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/share_whatsApp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share_whatsApp"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>

            <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" tools:ignore="UseCompoundDrawables">
                <ImageView
                        android:id="@+id/btnShareTelegram"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/ic_telegram_logo"
                        android:src="@drawable/ic_telegram"
                        android:padding="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/share_telegram"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share_telegram"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
            <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" tools:ignore="UseCompoundDrawables">
                <ImageView
                        android:id="@+id/btnShareSms"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/bg_round_share_copy_link"
                        android:src="@drawable/ic_sms"
                        android:padding="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/share_sms"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share_sms"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </LinearLayout>






        <LinearLayout
                android:id="@+id/ggggg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/attachFilesBg"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" tools:ignore="UseCompoundDrawables">
                <ImageView
                        android:id="@+id/btnShareSkype"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ic_skype"
                        android:layout_gravity="center"
                        android:contentDescription="@string/share_skype"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share_skype"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>

            <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" tools:ignore="UseCompoundDrawables">
                <ImageView
                        android:id="@+id/btnShareMail"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/bg_round_share_copy_link"
                        android:src="@drawable/ic_mail"
                        android:padding="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/share_mail"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share_mail"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
            <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" tools:ignore="UseCompoundDrawables">
                <ImageView
                        android:id="@+id/btnShareMessenger"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/ic_messenger"
                        android:layout_gravity="center"
                        android:contentDescription="@string/share_messenger"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share_messenger"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:textColor="?attr/colorTextGreyDarkOrWhite"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/voiceCallRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.calls.voice.VoiceCallActivity">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_tik_talk_logo"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp"
            android:text="@string/call_audio_title"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/roboto_regular"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="22dp">
        <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48sp"
                tools:text="Kim"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/roboto_regular"/>
        <TextView
                android:id="@+id/tvCallStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_gravity="bottom|end"
                android:textSize="13sp"
                tools:text="INCOMING"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/roboto_regular"/>
        <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="16dp"
                android:textSize="13sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/roboto_regular"
                android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="0dp">
        <ImageView
                android:id="@+id/callerAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_home"/>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="bottom">
            <ImageView
                    android:id="@+id/btnDeclineCall"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="start"
                    android:scaleType="centerCrop"
                    android:padding="12dp"
                    android:background="@drawable/bg_round_red_call"
                    android:src="@drawable/ic_call_decline"/>
            <com.andyshon.tiktalk.ui.calls.voice.ImageTouchSlider
                    android:id="@+id/btnAcceptCall2"
                    android:visibility="gone"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal|bottom"/>
            <ImageView
                    android:id="@+id/btnAcceptCall"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:padding="12dp"
                    android:rotation="-135"
                    android:background="@drawable/bg_round_green"
                    android:src="@drawable/ic_call_decline"/>
            <ImageView
                    android:id="@+id/btnSendSms"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="end"
                    android:scaleType="centerCrop"
                    android:padding="22dp"
                    android:background="@drawable/bg_round_gray_light"
                    android:src="@drawable/ic_cloud"/>
        </FrameLayout>



        <ImageView
                android:id="@+id/btnEndCall"
                android:visibility="gone"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="40dp"
                android:scaleType="centerCrop"
                android:padding="12dp"
                android:background="@drawable/bg_round_red"
                android:src="@drawable/ic_call_decline"/>

        <TextView
                android:id="@+id/tvSwipeToAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_gravity="bottom|center_horizontal"
                android:textSize="13sp"
                android:text="@string/call_swipe_to_answer"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/roboto_regular"/>

        <ProgressBar
                android:id="@+id/reconnectingProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                style="?android:attr/progressBarStyleLarge"
                android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
        <ImageView
                android:id="@+id/btnSoundOff"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="55dp"
                android:padding="17dp"
                android:layout_gravity="start|center_vertical"
                tools:background="@drawable/bg_round_grey"
                android:src="@drawable/ic_sound_off"
                android:tint="@color/colorBlack"/>
        <ImageView
                android:id="@+id/btnMute"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginEnd="55dp"
                android:padding="12dp"
                android:layout_gravity="end|center_vertical"
                tools:background="@drawable/bg_round_grey"
                android:src="@drawable/ic_mic_white_off_24dp"
                android:tint="@color/colorBlack"/>
    </FrameLayout>

</LinearLayout>
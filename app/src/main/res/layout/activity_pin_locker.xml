<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.locker.PinLockerActivity">

    <include layout="@layout/app_toolbar_only_btn_back"/>

    <ImageView
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_logo_secret_gradient"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:contentDescription="@string/logo"/>

    <EditText
            android:id="@+id/etMask"
            android:inputType="number"
            android:visibility="visible"
            android:cursorVisible="false"
            android:text="@string/number_1"
            android:maxLength="5"
            android:background="@color/colorTransparent"
            android:textColor="?attr/colorBackground"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:ignore="Autofill,LabelFor"/>
    
    <LinearLayout
            android:id="@+id/layoutPin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
        <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/pin1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/bg_round_purple"
                android:contentDescription="@string/pin"/>
        <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/pin2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/bg_round_purple"
                android:contentDescription="@string/pin"/>
        <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/pin3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/bg_round_purple"
                android:contentDescription="@string/pin"/>
        <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/pin4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/bg_round_purple"
                android:contentDescription="@string/pin"/>
        <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layoutSendVoiceMessage"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_round_send_message">

        <LinearLayout
                android:id="@+id/layoutRecordVoiceMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:ignore="UselessParent">
            <ImageView
                    android:id="@+id/icRecording"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_microphone"
                    android:background="@drawable/bg_round_red"
                    android:padding="3dp"
                    android:tint="@color/colorWhite"
                    android:layout_gravity="center"
                    android:contentDescription="@string/recording"/>
            <TextView
                    android:id="@+id/tvRecordingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorBlack40"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    tools:text="00:00:03"
                    android:layout_gravity="center_vertical"/>
            <TextView
                    android:id="@+id/btnRecordCancel"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/cancel"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
            android:visibility="visible"
            tools:visibility="visible"
            android:id="@+id/btnSendVoiceMessage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_round_violet"
            android:src="@drawable/ic_send_message"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/send"/>

</LinearLayout>
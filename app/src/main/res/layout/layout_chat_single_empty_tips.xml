<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_weight="1"
            android:id="@+id/btnTip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_tips_1"
            android:lines="1"
            android:textSize="16sp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bg_tip"
            android:fontFamily="@font/roboto_regular"
            android:textColor="?attr/colorBlackOrWhite"
            android:gravity="center"/>

    <TextView
            android:layout_weight="1"
            android:id="@+id/btnTip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:text="@string/chat_tips_2"
            android:lines="1"
            android:textSize="16sp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bg_tip"
            android:fontFamily="@font/roboto_regular"
            android:textColor="?attr/colorBlackOrWhite"
            android:gravity="center"/>

    <TextView
            android:layout_weight="1"
            android:id="@+id/btnTip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:text="@string/chat_tips_3"
            android:lines="1"
            android:textSize="16sp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bg_tip"
            android:fontFamily="@font/roboto_regular"
            android:textColor="?attr/colorBlackOrWhite"
            android:gravity="center"/>

</LinearLayout>
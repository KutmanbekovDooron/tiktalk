<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="?attr/navigation_bar_height"
        tools:context=".ui.auth.createProfile.addPhotos.ProfileAddPhotosActivity">

    <include layout="@layout/app_toolbar_title"/>

    <TextView
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_add_photos_title"
            android:textSize="27sp"
            android:textColor="?attr/colorTextGreyDarkOrWhite"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_add_photos_hold_and_drag"
            android:textSize="17sp"
            android:textColor="?attr/colorTextGreyDark50OrWhite"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="19dp"
            android:layout_marginStart="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gridview"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:scrollbars="none"
            tools:listitem="@android:layout/simple_list_item_checked"/>

    <Button
            android:layout_weight="0"
            android:id="@+id/btnDone"
            android:enabled="false"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:fontFamily="@font/avenir_next_regular"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="16dp"
            android:textAllCaps="true"
            android:background="@drawable/selector_btn_red"
            android:text="@string/profile_add_photos_btn_done"/>

</LinearLayout>
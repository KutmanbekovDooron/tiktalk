<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/layoutSendMessage"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

    <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_round_send_message">
        <EditText
                android:id="@+id/etMessageField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/write_her_something"
                android:textColorHint="?attr/colorTextBlackOrGrey"
                android:inputType="textCapSentences"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="16sp"
                android:textColor="?attr/colorTextBlackOrGrey"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/colorTransparent"
                android:layout_marginStart="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="4dp"
                android:layout_gravity="center_vertical" tools:ignore="Autofill"/>
    </FrameLayout>

    <ImageView
            android:id="@+id/btnSendMessage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_round_6"
            android:src="@drawable/ic_send_message"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/send"/>

</LinearLayout>
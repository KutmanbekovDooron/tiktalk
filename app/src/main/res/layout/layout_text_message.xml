<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layoutSendMessage"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_round_send_message">
        <ImageView
                android:id="@+id/btnSmile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_smile"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/smile"/>
        <EditText
                android:layout_weight="1"
                android:id="@+id/etMessageField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/send_a_message"
                android:textColorHint="?attr/colorTextGreyDarkOrGreyLight"
                android:imeOptions="actionSend"
                android:inputType="textCapSentences"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="16sp"
                android:textColor="?attr/colorTextBlackOrGrey"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/colorTransparent"
                android:layout_marginStart="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="4dp"
                android:layout_gravity="center_vertical" tools:ignore="Autofill,NestedWeights"/>
        <ImageView
                android:id="@+id/btnAttachFile"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="5dp"
                android:src="@drawable/ic_attach_file"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/attach_file"/>
        <ImageView
                android:id="@+id/btnMicrophone"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="5dp"
                android:src="@drawable/ic_microphone"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/microphone"/>
    </LinearLayout>

    <ImageView
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/btnSendMessage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_round_6"
            android:src="@drawable/ic_send_message"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/send"/>

</LinearLayout>
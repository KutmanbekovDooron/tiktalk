<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layoutChatSingleOwnFilePdfRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="100dp"
        android:paddingEnd="16dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:background="@drawable/bg_chat_single_own"
            android:orientation="vertical" tools:ignore="UselessParent">

        <TextView
                android:id="@+id/tvOwnFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="mySchedule.pdf"
                android:layout_gravity="end"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@color/colorWhite"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="end" tools:ignore="UseCompoundDrawables">

            <TextView
                    android:id="@+id/tvOwnFileTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="16:26"
                    android:textColor="@color/colorWhite70"
                    android:textSize="11sp"
                    android:fontFamily="@font/sf_pro_display_medium"
                    tools:ignore="SmallSp"/>

            <ImageView
                    android:id="@+id/ivOwnFilePdfVerification"
                    android:layout_width="13dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_message_unverification_mark"
                    android:contentDescription="@string/checkMark"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>